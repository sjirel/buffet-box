{{ 'section-shop-occasion.css' | asset_url | stylesheet_tag }}
{%- style -%}
    .section-{{ section.id }}-padding-mobile {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding-desktop {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{%- endstyle -%}

<div class="section-shop-occasion section-{{ section.id }}-padding-desktop section-{{ section.id }}-padding-mobile">
    <div class="section-heading">
        <h2>{{ section.settings.title }}</h2>
    </div>
    <div class="shop-carousel">
        <div class="swiper shop-occasion-slider">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                    <div class="swiper-slide">
                        <div class="swiper-card">
                            <div class="floating-bg-image">
                                <img class="w-100" src="{{ 'paper-texture.png' | asset_url }}" alt="">
                            </div>
                            <div class="card-shadow">                                
                                <div class="card-main">
                                    <div class="ico-holder">
                                        {{ block.settings.icon | image_url: width: 40 | image_tag }}
                                    </div>                                    
                                    <div class="image-holder">
                                        <div class="title">
                                            {{ block.settings.title }}
                                        </div>
                                        {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy' }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-buttons">
                <button class="swiper-button-prev">
                    {% render 'icon-arrow-left' %}
                </button>
                <button class="swiper-button-next">
                    {% render 'icon-arrow-right' %}
                </button>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Section: Shop Occasion",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "checkbox",
            "id": "show_arrow",
            "label": "Show arrow?"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 40
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 52
        },        

        {
            "type": "range",
            "id": "padding_top_mobile",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "Top Padding: Mobile",
            "default": 40
        },
        {
            "type": "range",
            "id": "padding_bottom_mobile",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "Bottom Padding: Mobile",
            "default": 52
        }  
    ],
    "blocks": [
        {
            "name": "Card",
            "type": "card",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "icon",
                    "label": "Icon"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Card Image"
                },
                {
                   "type": "text",
                   "id": "title",
                   "label": "Title" 
                }
            ]
        }
    ]

    
}
{% endschema %}