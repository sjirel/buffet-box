{{ 'section-additional-info.css' | asset_url | stylesheet_tag }}

<div class="product-additional__info">
    <div class="page-width">
        <ul class="grid grid--1-col grid--3-col-tablet">
            {%- for block in section.blocks -%}
                <li class="grid__item">
                    {% render 'icon-additional-info', icon: block.settings.icon %}
                    <div class="hgroup">
                        <h3 class="h4 accordion__title inline-richtext">
                            {{ block.settings.heading }}
                        </h3>
                        <p class="caption">{{ block.settings.caption }}</p>
                    </div>

                </li>
            {%- endfor -%}
        </ul>
    </div>
</div>

{% schema %}
{
    "name": "Section: Additional Info",
    "tag": "section",
    "class": "section",    
    "settings": [
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
    ],
    "blocks":[
        {
            "type": "icon_text",
            "name": "t:sections.multicolumn.blocks.column.name",
            "settings" :[
                {
                    "type": "select",
                    "id": "icon",
                    "options": [
                        {
                        "value": "donut",
                        "label": "Donut"
                        },
                        {
                        "value": "celebration",
                        "label": "Celebration"
                        },
                        {
                        "value": "shipping",
                        "label": "Shipping"
                        }
                    ],
                    "default": "donut",
                    "label": "t:sections.main-product.blocks.collapsible_tab.settings.icon.label"
                },                
                {
                    "type": "text",
                    "id": "heading",
                    "default": "Title",
                    "info": "t:sections.main-product.blocks.collapsible_tab.settings.heading.info",
                    "label": "t:sections.main-product.blocks.collapsible_tab.settings.heading.label"
                },
                {
                    "type": "inline_richtext",
                    "id": "caption",
                    "label": "Sub text"
                }                
            ]
        }
    ],    
    "presets": [
            {
                "name": "Section:Additional  info",
                "blocks": [
                    {
                        "type": "icon_text"
                    },
                    {
                        "type": "icon_text"
                    },
                    {
                        "type": "icon_text"
                    }
                ]                
            }
            
        ]        
}
{% endschema %}