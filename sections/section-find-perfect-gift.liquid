{{ 'section-find-perfect-gift.css' | asset_url | stylesheet_tag }}
{%- style -%}
    .section-{{ section.id }}-padding-mobile {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding-desktop {
            padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
            padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
        }
    }
    @media screen and (min-width: 1200px) {
        .section-{{ section.id }}-padding-desktop {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{%- endstyle -%}

<div class="find-perfect-gift section-{{ section.id }}-padding-desktop section-{{ section.id }}-padding-mobile">
    <div class="bgArc">&nbsp;</div>
    <div class="page-width">
        <div class="section-heading">
            <h5 class="title-helper">Not Sure What To Get?</h5>
            <h2>Find The Perfect Box</h2>
        </div>
        <div class="find-perfect-gift-form-wrapper">
            <form action="" class="find-perfect-gift-form">
                <div class="elems-top">
                    <div class="form-group">
                        <label>Who is this for?</label>
                        <select class="form-control">
                            <option value="">Family</option>
                            <option value="">Family</option>
                            <option value="">Family</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>What’s the occasion?</label>
                        <select class="form-control">
                            <option value="">Congratulations</option>
                            <option value="">Congratulations</option>
                            <option value="">Congratulations</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>What’s your budget?</label>
                        <select class="form-control">
                            <option value="">$90 to $120</option>
                            <option value="">$90 to $120</option>
                            <option value="">$90 to $120</option>
                        </select>
                    </div>
                </div>
                <div class="submit-button-wrapper">
                    <button class="btn btn-red-gradient">Find The Perfect Gift</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Section: Perfect Gift",
        "settings": [
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 200,
                "step": 2,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 60
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 200,
                "step": 2,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 60
            },        

            {
                "type": "range",
                "id": "padding_top_mobile",
                "min": 0,
                "max": 200,
                "step": 2,
                "unit": "px",
                "label": "Top Padding: Mobile",
                "default": 60
            },
            {
                "type": "range",
                "id": "padding_bottom_mobile",
                "min": 0,
                "max": 200,
                "step": 2,
                "unit": "px",
                "label": "Bottom Padding: Mobile",
                "default": 60
            }  
        ]
    }
{% endschema %}